<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:textSize="20sp"
        android:gravity="center"
        android:text="Â¿Desea unirse al grupo?" />

    <TextView
        android:id="@+id/txtTitleGroupDialogInvitation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="15sp"
        android:gravity="center"
        android:text="Titulo del grupo" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:layout_marginBottom="10dp">

        <Button
            android:id="@+id/btnInvitationAgree"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:background="@drawable/backgroud_button"
            android:textColor="@color/white"
            android:layout_marginRight="10dp"
            android:text="Agregarme"/>

        <Button
            android:id="@+id/btnInvitationNoAgree"
            android:layout_width="140dp"
            android:background="@drawable/background_button_red"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:textColor="@color/white"
            android:text="No Agregarme"/>

    </LinearLayout>


</LinearLayout>