<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/purple_200"
    tools:context=".activities.InvitationActivity">



    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/btnInvitationBack"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="12dp"
        android:padding="5dp"
        android:src="@drawable/ic_back"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:tint="@color/white"/>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="5dp"
        android:background="@drawable/backgroud_white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btnInvitationBack"
        app:layout_constraintVertical_bias="0.0"
        tools:layout_editor_absoluteX="0dp">


            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                >


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="Invitaciones"
                    android:textColor="@color/primary_text"
                    android:textSize="25sp"
                    android:textStyle="bold"
                    android:layout_gravity="center"/>



                <ListView
                    android:id="@+id/listViewInvitation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="5dp"
                    />


                <ProgressBar
                    android:id="@+id/invitationProgressBar"
                    android:layout_width="25dp"
                    android:layout_height="25dp"
                    android:layout_marginTop="200dp"
                    android:layout_gravity="center"
                    android:visibility="gone"/>


                <TextView
                    android:id="@+id/textMessageInvitation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="No hay ninguna invitacion"
                    android:textColor="@color/color_gray"
                    android:textSize="18sp"
                    android:layout_gravity="center"
                    android:visibility="gone"
                    />


            </LinearLayout>

    </FrameLayout>

</androidx.constraintlayout.widget.ConstraintLayout>